<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!--== Cetmix Module ==-->

        <!-- Do Something: Own Records Only -->
        <record model="ir.rule" id="ir_rule_own_records">
            <field name="name">cetmix.own.records.only.rule</field>
            <field name="model_id" ref="model_cetmix_custom_model"/>
            <field name="domain_force">['|',
                ('partner_id','=', user.partner_id.id)
                ('partner_follower_ids','in', [user.partner_id.id])
                ]</field>
            <field name="groups" eval="[(4, ref('group_cetmix_module_do_something'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Do Anything: Any Records -->
        <record model="ir.rule" id="ir_rule_all_records">
            <field name="name">cetmix.all.records.rule</field>
            <field name="model_id" ref="model_cetmix_custom_model"/>
            <field name="domain_force">[
                (1 ,'=', 1)
                ]</field>
            <field name="groups" eval="[(4, ref('group_cetmix_module_do_anything'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
</odoo>
