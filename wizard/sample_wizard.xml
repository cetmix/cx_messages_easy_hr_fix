<odoo>
    <!--############
   # Sample Wizard #
   #################-->

    <!-- ## Form view ## -->
    <record model="ir.ui.view" id="cetmix_sample_wizard_form">
        <field name="name">cetmix.sample.wizard.form</field>
        <field name="model">cetmix.sample.wiz</field>
        <field name="arch" type="xml">
            <form string="Cetmix Sample Wizard">
                <div name="message" colspan="2" class="oe_form_box_info oe_text_center">
                    <p>
                        You can put message on Wizard!<br/>
                    </p>
                </div>
                <group>
                    <field name="partner_id" />
                </group>
                <footer>
                    <button string="Some Action" name="some_action"
                            type="object"
                            class="btn-primary"
                            help="Some Custom Action"
                            attrs="{'invisible':[('partner_id', '=', False)]}"/>
                    <button name="cancel"
                            string="Cancel"
                            special="cancel"
                            class="oe_link"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>