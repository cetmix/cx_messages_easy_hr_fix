<?xml version="1.0"?>
<odoo>
    <template id="mp_seller_profile" inherit_id="odoo_marketplace.mp_seller_profile" name="Seller Profile">
        <!-- Add "Call" button -->
        <xpath expr="//a[@t-if='website.sudo().mp_seller_contact_btn']" position="after">
            <span class="btn btn-primary" id="button-conference" t-att-seller-id="seller.id">Call Seller</span>
        </xpath>
        <xpath expr="//div[@class='container']/div[1]" position="inside">
            <!-- Modal Notification-->
            <div id="modalNotification" class="modal fade" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">Warning</h4>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">&amp;times;</button>
                        </div>
                        <div class="modal-body">
                            <p id="warn-message-text">This is a waring!</p>
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>

        <xpath expr="//script[last()]" position="after">
            <script
                    type="text/javascript"
                    src="/ooops_bbb_marketplace/static/src/js/website_seller.js"/>
        </xpath>
    </template>
</odoo>
